@model IEnumerable<Article>

<div class="container">
    <table class="table table-striped table-active table-hover">
        <thead>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Price
                </td>
                <td>
                    Stock
                </td>
                <td>
                    Edit
                </td>
                <td>
                    Delete
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
            <tr>
                <td>
                    @article.Name
                </td>
                <td>
                    @article.Price
                </td>
                <td>
                    @article.Stock
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@article.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@article.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <a asp-action="Create">Create Article</a>
    </div>
</div>

